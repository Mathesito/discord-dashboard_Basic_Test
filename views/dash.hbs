<div class="container-fluid">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each servidores}}
        <div class="col my-1">
            <div class="card">
                <div class="row">
                    <div class="col-4">
                        {{#if this.icon}}
                        <img src="https://cdn.discordapp.com/icons/{{this.id}}/{{this.icon}}.png" style="height: 128px; width: 128px;" class="img-fluid rounded-circle"
                        alt="{{this.name}}">
                        {{else}}
                        <img src="https://images-ext-2.discordapp.net/external/7kG8GvaAyFTW94FQsZCs8yiC3GDDqorEamYmQhePvI4/https/cdn.discordapp.com/embed/avatars/3.png" style="height: 128px; width128px;" class="img-fluid rounded-circle" alt="{{this.name}}">
                        {{/if}}                
                    </div>
                    <div class="col">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            {{#if this.esta}}
                            <a href="/dash/{{this.id}}" class="btn btn-danger">Iniciar</a>
                            {{ else }}
                            <a href="https://discord.com/api/oauth2/authorize?client_id=1031696983955619870&permissions=0&redirect_uri=http%3A%2F%2Flocalhost%3A3000%2Flogin&scope=bot" class="btn btn-info">Invitar</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div> 
        {{/each}}
    </div>
</div>

